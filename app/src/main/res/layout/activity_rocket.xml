<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.qun.com.weishi.activity.RocketActivity">

    <ImageView
        android:id="@+id/img_smock_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/desktop_smoke_m" />

    <ImageView
        android:id="@+id/img_smock_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_smock_m"
        android:layout_centerHorizontal="true"
        android:background="@drawable/desktop_smoke_t" />
</RelativeLayout>
